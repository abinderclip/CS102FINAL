#include "lab.h"
#include "json.hpp"
using nlohmann::json;
BMIinfo getAPIInfo(std::string s)
{
    std::string b = searchGiphy(s);
    while(g.back()!='}') g.pop_back();
    auto j = json::parse(b);
    BMIinfo bi;
    std::string info;
    for(auto &e : j["bmi"])
    {
	info += e["value"]; info += " ";
	info += e["status"]; info += " ";
	info += e["risk"];
    }
    std::istringstream iss(info);
    iss >> bi.value;
    iss >> bi.status;
    iss >> bi.risk;
    return bi;
    
}
